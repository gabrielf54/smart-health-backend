generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  MALE
  FEMALE
}

enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  HIGH
  EXTREME
}

enum Goal {
  LOSE_WEIGHT
  MAINTAIN
  GAIN_MUSCLE
  GAIN_WEIGHT
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  profile Profile?
  diets   Diet[]
}

model Profile {
  id            String         @id @default(cuid())
  userId        String         @unique
  age           Int?
  weightKg      Float?
  heightCm      Float?
  sex           Sex?
  activityLevel ActivityLevel?
  goal          Goal?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Diet {
  id             String   @id @default(cuid())
  userId         String
  targetCalories Int
  meals          Json
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}


